%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Title
      %th Actions
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= link_to "edit", edit_book_path(:id => book.id)
        %td= link_to "show", book_path(:id =>book.id)
        %td= link_to "delete", book_path(:id => book.id), :method => :delete
        %td= link_to "Authors", new_book_author_path(:book_id => book.id)
        